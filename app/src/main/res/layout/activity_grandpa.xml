<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background_grandpa"
    android:orientation="vertical"
    tools:context=".GrandpaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuGrandpaSelectedImage"
            android:contentDescription="@string/image"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_menu_grandpa_selected" />

        <ImageView
            android:id="@+id/menuFarmImage"
            android:contentDescription="@string/image_button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_menu_grow" />

        <ImageView
            android:id="@+id/menuBookImage"
            android:contentDescription="@string/image_button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_menu_book" />

        <ImageView
            android:id="@+id/menuExplainImage"
            android:contentDescription="@string/image_button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_menu_explain" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:contentDescription="@string/image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_category_wood" />

        <ImageView
            android:id="@+id/imageView2"
            android:contentDescription="@string/image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_category_humidifier" />

        <ImageView
            android:id="@+id/imageView3"
            android:contentDescription="@string/image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_category_heater" />

        <ImageView
            android:id="@+id/imageView4"
            android:contentDescription="@string/image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_category_warmer" />

        <ImageView
            android:id="@+id/imageView5"
            android:contentDescription="@string/image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_category_supplies" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="100dp">

        <ImageView
            android:id="@+id/imageView6"
            android:contentDescription="@string/image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/image_number_np" />

        <ImageView
            android:id="@+id/imageView7"
            android:contentDescription="@string/image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/image_grade" />
    </LinearLayout>
</LinearLayout>